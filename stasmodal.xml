<?xml version="1.0" encoding="utf-8"?>
<extension version="3.5" type="plugin" group="system" method="upgrade">
	<name>PLG_STASMODAL</name>
	<creationDate>11.11.2016</creationDate>
	<author>stas</author>
	<authorEmail>your@email.com</authorEmail>
	<authorUrl>http://your.url.com</authorUrl>
	<copyright>A copyright</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>1.0</version>
	<description>PLG_STASMODAL_XML_DESCRIPTION</description>

	<!-- Scripts to run on installation -->
	<scriptfile></scriptfile>

	<!-- Language files -->
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_system_stasmodal.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_system_stasmodal.sys.ini</language>
	</languages>

	<!-- Plugin files -->
	<files>
		<filename plugin="stasmodal">stasmodal.php</filename>
		<folder>language</folder>
	</files>

	<!-- Config parameter -->
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="sample"
					type="text"
					default="42"
					label="PLG_STASMODAL_SAMPLE_LABEL"
					description="PLG_STASMODAL_SAMPLE_DESCRIPTION"
				/>
			</fieldset>
		</fields>
	</config>

	<!-- Update servers -->
	<updateservers>
		<server type="extension" priority="1" name="stasmodal">https://www.example.com/plg_stasmodal.xml</server>
	</updateservers>
</extension>
